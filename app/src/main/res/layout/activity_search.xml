<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/fons_app">

    <LinearLayout
        android:id="@+id/search_general"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/search_topZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/search_title"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rectangle_gran_gborder_white"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:hint="@string/search_bar"
                android:inputType="text"
                android:drawableEnd="@drawable/ic_search_green"
                android:textColorHint="#70353535"
                android:layout_marginHorizontal="40dp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintTop_toBottomOf="@id/search_topZone"
            android:visibility="visible">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <Button
                    android:id="@+id/genere_rock"
                    android:text="@string/genere_rock"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"/>
                <Button
                    android:id="@+id/genere_pop"
                    android:text="@string/genere_pop"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"/>

                <!-- FILA 2 -->
                <Button
                    android:id="@+id/genere_dance"
                    android:text="@string/genere_dance"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"/>
                <Button
                    android:id="@+id/genere_country"
                    android:text="@string/genere_country"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>

                <!-- FILA 3 -->
                <Button
                    android:id="@+id/genere_hiphop"
                    android:text="@string/genere_hiphop"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"/>
                <Button
                    android:id="@+id/genere_rap"
                    android:text="@string/genere_rap"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>

                <!-- FILA 4 -->
                <Button
                    android:id="@+id/genere_jazz"
                    android:text="@string/genere_jazz"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"/>
                <Button
                    android:id="@+id/genere_blues"
                    android:text="@string/genere_blues"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>

                <!-- FILA 5 -->
                <Button
                    android:id="@+id/genere_classical"
                    android:text="@string/genere_classical"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"/>
                <Button
                    android:id="@+id/genere_folk"
                    android:text="@string/genere_folk"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>

                <!-- FILA 6 -->
                <Button
                    android:id="@+id/genere_techno"
                    android:text="@string/genere_techno"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"/>
                <Button
                    android:id="@+id/genere_disco"
                    android:text="@string/genere_disco"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>

                <!-- FILA 7 -->
                <Button
                    android:id="@+id/genere_soul"
                    android:text="@string/genere_soul"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"/>
                <Button
                    android:id="@+id/genere_electronica"
                    android:text="@string/genere_disco"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>

                <!-- FILA 8 -->
                <Button
                    android:id="@+id/genere_celtic"
                    android:text="@string/genere_celtic"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"/>
                <Button
                    android:id="@+id/genere_heavymetal"
                    android:text="@string/genere_heavymetal"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>

                <!-- FILA 9 -->
                <Button
                    android:id="@+id/genere_reggae"
                    android:text="@string/genere_reggae"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"/>
                <Button
                    android:id="@+id/genere_alternativerock"
                    android:text="@string/genere_alternativerock"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"/>

            </GridLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/search_recyclerView_both"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintTop_toBottomOf="@id/search_topZone"
            android:visibility="gone">

            <!-- PLAYLIST -->
            <LinearLayout
                android:id="@+id/search_recyclerView_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@string/playlist_"
                    android:paddingLeft="10dp"
                    android:textSize="25sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:scrollbars="horizontal"
                    android:id="@+id/search_dynamic_recyclerView_playlist"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <!-- SONGS -->
            <LinearLayout
                android:id="@+id/search_recyclerView_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@string/songs_"
                    android:paddingStart="10dp"
                    android:textSize="25sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.recyclerview.widget.RecyclerView
                    android:scrollbars="horizontal"
                    android:id="@+id/search_dynamic_recyclerView_songs"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <SeekBar
            android:id="@+id/dynamic_seekBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#21D760"
            android:progressTint="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="87dp"
            android:colorControlActivated="@drawable/ic_seekbar_scrubber"
            android:progressBackgroundTint="#21D760" />

        <Button
            android:id="@+id/playButton"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginBottom="55dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_play_white"
            android:layout_alignParentRight="true"
            android:visibility="visible"/>
        <Button
            android:id="@+id/playPause"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginBottom="55dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_pause_white"
            android:layout_alignParentRight="true"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/reproductor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/fons_reproductor"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:orientation="vertical"
            android:clickable="true"
            android:textAlignment="center"
            android:gravity="center">
            <TextView
                android:id="@+id/dynamic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:text="Probandoo"/>
            <TextView
                android:id="@+id/dynamic_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"
                android:alpha = ".56"
                android:paddingBottom="7dp"
                android:text="Probandoo Artista"/>

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#2A2D31"
            app:menu="@menu/navigation"
            app:itemBackground="@color/menuColor"
            app:itemIconTint="@drawable/menu_selector"
            app:itemIconSize= "30dp"
            app:labelVisibilityMode="unlabeled" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>