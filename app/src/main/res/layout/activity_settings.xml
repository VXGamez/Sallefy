<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".controller.activities.SettingsActivity"
    android:background="@drawable/fons_app">

    <LinearLayout
        android:id="@+id/topZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <Button
                android:id="@+id/back2User"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/ic_back_down"
                android:rotation="90" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/settings_title"
                android:text="@string/settings"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#21D760"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentTop="true"
            />


        <ScrollView
            android:id="@+id/settings_scrollview"
            android:layout_width="match_parent"
            android:layout_height="560dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/settings_change_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="55dp"
                    android:gravity="left"
                    android:text="@string/settings_change_first_name"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textview_settings_change_first_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_gran_gborder_white"
                    android:hint="@string/settings_add_new_first_name"
                    android:textColorHint="#70353535"></EditText>


                <TextView
                    android:id="@+id/settings_change_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="@string/settings_change_last_name"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textview_settings_change_last_name"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_gran_gborder_white"
                    android:hint="@string/settings_add_new_last_name"
                    android:textColorHint="#70353535"></EditText>


                <TextView
                    android:id="@+id/settings_change_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="@string/settings_change_email"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textview_settings_change_email"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_gran_gborder_white"
                    android:hint="@string/settings_add_new_email"
                    android:textColorHint="#70353535"></EditText>



                <TextView
                    android:id="@+id/settings_update_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="@string/settings_change_profile_pic"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="250dp">

                    <ImageButton
                        android:id="@+id/userImage"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/update_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorWhite"
                    android:text="@string/update"
                    android:textColor="@color/colorPrimaryDark">

                </Button>

                <Button
                    android:id="@+id/log_out_button"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorWhite"
                    android:text="@string/log_out"
                    android:textSize="20dp"
                    android:textColor="@color/av_red">

                </Button>
            </LinearLayout>

        </ScrollView>





    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <SeekBar
            android:id="@+id/dynamic_seekBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#21D760"
            android:thumb="@drawable/seek_thumb"
            android:progressTint="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="87dp"
            android:colorControlActivated="@drawable/ic_seekbar_scrubber"
            android:progressBackgroundTint="#21D760" />

        <Button
            android:id="@+id/playButton"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginBottom="55dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_play_white"
            android:layout_alignParentRight="true"
            android:visibility="visible"/>
        <Button
            android:id="@+id/playPause"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginBottom="55dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_pause_white"
            android:layout_alignParentRight="true"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/reproductor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/fons_reproductor"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:clickable="true"
            android:textAlignment="center"
            android:gravity="center">
            <TextView
                android:id="@+id/dynamic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/dynamic_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"
                android:alpha = ".56"
                android:paddingBottom="12dp"/>

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#2A2D31"
            app:menu="@menu/navigation"
            app:itemBackground="@color/menuColor"
            app:itemIconTint="@drawable/menu_selector"
            app:itemIconSize= "30dp"
            app:labelVisibilityMode="unlabeled" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>